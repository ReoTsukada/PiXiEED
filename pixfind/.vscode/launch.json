{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Start PiXFIND Dev Server",
            "program": "${workspaceFolder}/server.mjs",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "PiXFIND dev server running at http://localhost:(\\d+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Open PiXFIND in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "PiXFIND: Dev Server + Browser",
            "configurations": [
                "Start PiXFIND Dev Server",
                "Open PiXFIND in Chrome"
            ]
        }
    ]
}
